<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rsvLinhaAulas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtrsvAluno"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/text1"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txtrsvData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Aluno" />

    <TextView
        android:id="@+id/txtrsvData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/text1"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="05/08/2019"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtrsvAluno" />

    <TextView
        android:id="@+id/txtrsvTipo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/text1"
        android:text="MÃ©todo"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/txtrsvAluno"
        app:layout_constraintStart_toStartOf="@+id/txtrsvAluno"
        app:layout_constraintTop_toBottomOf="@+id/txtrsvAluno" />

    <TextView
        android:id="@+id/txtrsvConcluido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/text1"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Concluido"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtrsvData"
        app:layout_constraintTop_toBottomOf="@+id/txtrsvAluno" />

    <TextView
        android:id="@+id/txtrsvAssunto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/text1"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="Licao 25 - 35"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgImp"
        app:layout_constraintStart_toStartOf="@+id/txtrsvTipo"
        app:layout_constraintTop_toBottomOf="@+id/txtrsvTipo" />

    <ImageView
        android:id="@+id/imgImp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_menu_download"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtrsvConcluido" />

</androidx.constraintlayout.widget.ConstraintLayout>